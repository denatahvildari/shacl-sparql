{ 
?x2 dbo:birthYear ?y2.
?x2 dbo:imdbId ?i2.
 
FILTER
( 
datatype(?y2) = xsd:gYear
AND NOT EXISTS {
?x2 dbo:birthYear ?y21 .
?x2 dbo:birthYear ?y22.
FILTER(?y21 != ?y22)
}
AND  NOT EXISTS {
?x2 dbo:activeYearsSartYear ?a21 .
?x2 dbo:activeYearsSartYear ?a22.
FILTER(?a21 != ?a22)
}

AND  NOT EXISTS {
?x2 dbo:birthPlace <Location>
)
}
}
